<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtViewMessageDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtViewMessagePostedBy"
        android:layout_marginTop="42dp"
        android:text="@string/messageDescription" />

    <TextView
        android:id="@+id/txtViewMessagePostedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtViewMessageDescription"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"
        android:text="@string/messagepostedby" />

    <TextView
        android:id="@+id/txtViewMessagePostedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtViewMessagePostedBy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:text="@string/messagedate" />

    <ImageView
        android:id="@+id/imageViewMessageDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/txtViewMessagePostedDate"
        android:layout_alignTop="@+id/txtViewMessageDescription"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_delete" />
</RelativeLayout>