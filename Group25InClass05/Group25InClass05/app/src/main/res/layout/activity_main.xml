<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.group25inclass05.MainActivity">


    <TextView
        android:id="@+id/txtKeyWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/searchkeyword"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtKeyWord"
        android:layout_alignBottom="@+id/txtKeyWord"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:text="@string/go" />

    <ImageButton
        android:id="@+id/imgbtnPrevious"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtKeyWord"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/prev"
        tools:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imgbtnNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/btnGo"
        android:layout_alignTop="@+id/imgbtnPrevious"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/btnGo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:scaleType="fitCenter" />
</RelativeLayout>
