<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inclass12.MessagesActivity">

    <TextView
        android:id="@+id/txtViewThreadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgViewLogoutOnThreadScreen"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:text="@string/threadTitle"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextAddMessageToThread"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Type Message to send"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/send" />

    <ListView
        android:id="@+id/listViewMessages"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/btnSendMessage"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewLogoutOnMessagescreen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/home" />

</RelativeLayout>
