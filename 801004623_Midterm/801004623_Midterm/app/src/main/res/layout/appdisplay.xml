<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgOfApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="37dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txtViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgOfApp"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/imgOfApp"
        android:text="@string/appName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtViewArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgOfApp"
        android:layout_below="@+id/imgOfApp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="11dp"
        android:text="@string/artist" />

    <TextView
        android:id="@+id/txtViewReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtViewArtist"
        android:layout_alignBottom="@+id/txtViewArtist"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp"
        android:text="@string/releaseDate" />

    <TextView
        android:id="@+id/txtViewGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtViewArtist"
        android:layout_marginTop="14dp"
        android:text="@string/genrelist" />
</RelativeLayout>