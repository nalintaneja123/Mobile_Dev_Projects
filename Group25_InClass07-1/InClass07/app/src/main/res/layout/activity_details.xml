<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saipavanraju.inclass07.DetailsActivity">


    <TextView
        android:id="@+id/txtViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/newstitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtViewPublishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="@string/publishedat"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_below="@+id/txtViewPublishedAt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtviewNewsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newsImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/newsdescription"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:visibility="visible" />

</RelativeLayout>
